# =================================
# OG BOT COMPLETE CONFIGURATION
# =================================

# DISCORD BOT CONFIGURATION
BOT_TOKEN=your_discord_bot_token_here
PREFIX=!

# API CONFIGURATION  
API_PORT=3000
API_DOMAIN=https://api.yourdomain.com
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
CORS_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com,http://localhost:3000

# DATABASE CONFIGURATION
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/og_bot?retryWrites=true&w=majority

# ENVIRONMENT
NODE_ENV=production

# OPTIONAL: LOGGING CONFIGURATION
LOG_LEVEL=info
LOG_TO_FILE=true

# OPTIONAL: SECURITY SETTINGS
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
VERIFY_RATE_LIMIT_WINDOW_MS=60000
VERIFY_RATE_LIMIT_MAX=5
